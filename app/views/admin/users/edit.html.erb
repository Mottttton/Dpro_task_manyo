<h1 class='my-4'><%= t('.title') %></h1>
<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h2 class='alert-heading'>ユーザの更新に失敗しました</h2>
    <hr>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= render 'form', {user: @user, url: "/admin/users/#{@user.id}", action: 'update-user'} %>
<%= link_to t('common.back'), admin_users_path, method: :get, id: 'back', class: 'btn btn-secondary' %>