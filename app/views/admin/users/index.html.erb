<h1><%= t('.title') %></h1>
<table>
  <thead>
    <th><%= t('.table.name') %></th>
    <th><%= t('.table.email') %></th>
    <th><%= t('.table.admin') %></th>
    <th><%= t('.table.tasks') %></th>
    <th colspan='3'></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= t(user.admin) %></td>
        <td><%= user.tasks_count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user.id), method: :get, id: 'show-user' %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user.id), method: :get, id: 'edit-user' %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user.id), method: :delete, id: 'destroy-user', data: {confirm: t('common.confirm_destroy')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>