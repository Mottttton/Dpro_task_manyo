<h1 class='my-4'><%= t('.title') %></h1>
<table class='table table-hover'>
  <thead class='tahead-light'>
    <th scope='col'><%= t('.table.name') %></th>
    <th scope='col'><%= t('.table.email') %></th>
    <th scope='col'><%= t('.table.admin') %></th>
    <th scope='col'><%= t('.table.tasks') %></th>
    <th scope='col' colspan='3'></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr scope='row' id="user-<%= user.id %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= t(user.admin) %></td>
        <td><%= user.tasks_count %></td>
        <td><%= link_to t('common.show'), admin_user_path(user.id), method: :get, class: 'show-user btn btn-primary' %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user.id), method: :get, class: 'edit-user btn btn-primary' %></td>
        <td><%= link_to t('common.destroy'), admin_user_path(user.id), method: :delete, class: 'destroy-user btn btn-danger', data: {confirm: t('common.confirm_destroy')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>