<h1 class='my-4'><%= t('.title') %></h1>
<table class='table'>
  <thead class='thead-light'>
    <th scope='col'><%= t('.table.name') %></th>
    <th scope='col'><%= t('.table.email') %></th>
    <th scope='col'><%= t('.table.admin') %></th>
  </thead>
  <tbody>
    <tr scope='row'>
      <td><%= @user.name %></td>
      <td><%= @user.email %></td>
      <td><%= t(@user.admin) %></td>
    </tr>
  </tbody>
</table>
<h2><%= @user.name %>のタスク一覧</h2>
<table class='table'>
  <thead class='thead-light'>
    <th><%= t('tasks.index.table.title') %></th>
    <th><%= t('tasks.index.table.content') %></th>
    <th><%= t('tasks.index.table.created_at') %></th>
    <th><%= t('tasks.index.table.deadline_on') %></th>
    <th><%= t('tasks.index.table.priority') %></th>
    <th><%= t('tasks.index.table.status') %></th>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l task.created_at %></td>
        <td><%= l task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('common.back'), admin_users_path, method: :get, id: "back", class: 'btn btn-secondary' %>
