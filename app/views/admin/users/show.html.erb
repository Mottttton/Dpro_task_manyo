<h1><%= t('.title') %></h1>
<p><%= t('activerecord.attributes.user.name') %>:  <%= @user.name %></p>
<p><%= t('activerecord.attributes.user.email') %>:  <%= @user.email %></p>
<p><%= t('activerecord.attributes.user.admin') %>:  <%= t(@user.admin) %></p>
<table>
  <thead>
    <th><%= t('tasks.index.table.title') %></th>
    <th><%= t('tasks.index.table.content') %></th>
    <th><%= t('tasks.index.table.created_at') %></th>
    <th><%= t('tasks.index.table.deadline_on') %></th>
    <th><%= t('tasks.index.table.priority') %></th>
    <th><%= t('tasks.index.table.status') %></th>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= l task.created_at %></td>
        <td><%= l task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('common.back'), admin_users_path, method: :get, id: "back" %>
