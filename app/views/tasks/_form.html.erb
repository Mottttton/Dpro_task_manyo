<%= form_with(model: task, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="field">
    <%= form.label :deadline_on %>
    <%= form.date_field :deadline_on, max: "9999-12-31" %>
  </div>
  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.map { |k| [k, k] }.reverse, include_blank: true %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.map { |k| [k, k] }, include_blank: true %>
  </div>
  <div class="actions">
    <%= form.submit id: action %>
  </div>
<% end %>