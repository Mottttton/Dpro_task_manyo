<h1><%= t('.title') %></h1>
<% if @task.errors.any? %>
  <div class="error_explanation">
    <h2>Fail to update task</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= render 'form', {task: @task, action: 'update-task' } %>
<%= link_to t('common.back'), tasks_path, method: :get, id: "back" %>
